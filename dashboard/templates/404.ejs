<%- include('blocks/header', {bot:bot, user: user, auth: auth}) %>
<div class="jumbotron">
    <div class="col-sm-8 mx-auto">
       <title>
    <%= bot.user.username %> - 404
        </title>
      <div class="container">
        
      <% if (bot.user.avatarURL) { %><div class="col-2"><img style="float:left;padding-right:10px;" class="img-responsive rounded-circle bounce"src='<%= bot.user.avatarURL %>?size=128'></div>
      <div class="col-8"><% } %>
      <h1>404</h1><% if (bot.user.avatarURL) { %></div><% } %>
        <p>You have reached the 404 page.(<code>Meaning this page does not exist.</code>)</p>
      <p>
        <a class="btn btn-primary" href="/commands" role="button"><i class="fa fa-fw fa-book" aria-hidden="true"></i> Bot Documentation »</a>
      </p>
        </div>
    </div>
  </div>

<div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-4">
          <h2><i class="fa fa-fw fa-question-circle" aria-hidden="true"></i> Home</h2>
          <p>Go back to the home page</p>
          <p><a class="btn btn-secondary disabled" href="/" role="button">Home »</a></p>
        </div>
        <div class="col-md-4">
          <h2><i class="fa fa-fw fa-cogs" aria-hidden="true"></i> Dashboard!</h2>
          <p>Yeah, the bot now has a dashboard!</p>
          <p><a class="btn btn-secondary" href="/login" role="button">Login »</a></p>
        </div>
        <div class="col-md-4">
        <% var invitePerm = "8" %>
          <h2><i class="fa fa-fw fa-info-circle" aria-hidden="true"></i> Invite the bot</h2>
          <p>Invite the bot</p>
          <p><a class="btn btn-secondary <% if(!bot.appInfo.botPublic) { %> disabled <% } %>" href="https://discordapp.com/oauth2/authorize?client_id=<%= bot.appInfo.id %>&scope=bot%20identify%20guilds&response_type=code&redirect_uri=<%= encodeURIComponent(`${bot.callbackURL}`) %>&permissions=<%= invitePerm %>">Add to Guild</a></p>
        </div>
      </div>
    </div>
